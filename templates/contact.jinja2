{% extends 'layout.jinja2' %}
{{ form.csrf_token }}

{% block styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/forms.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
<div class="formwrapper">
  <h2 class="title">PII Analyzer</h2>
  <form method="POST" action="/">
    <div class="form-field">{{ form.query.label }} {{ form.query(rows='10',cols='50') }}
      {% if form.query.errors %}
        <ul class="errors">
          {% for error in form.query.errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    {{ form.submit }}
  </form>
</div>
{% endblock %}
